@model Samana.ViewModels.LedenViewModel

<script>
    function lidsoortSelect(e) {
        $("#zoekopsoortform").submit();
        $.post('@Url.Action("Index","Leden")', { soortId: $(e).val() });
    }
    function RemovePerson(id) {
        if (confirm("Verwijder persoon?")) {
            $.post('@Url.Action("RemoveNoodPersoon","Leden")', { id: parseInt(id) })
            location.reload();
        }
        else {
            return false;
        }
    }
    var pageSize = 10;
    var pageIndex = 0;
    $(document).ready(function () {
        $("#loadingdiv").hide();
        
        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() - $(window).height()) {
                GetData();
            }
        });
    })

    function GetData() {
        $.ajax({
            type: 'POST',
            url: ajaxActionUrl,
            data: { "pageindex": pageIndex, "pagesize": pageSize },
            dataType: 'json',
            succes: function (data) {
                if (data != null) {
                    pageIndex++;
                }
            },
            beforeSend: function () {
                $("#progress").show();
            },
            complete: function () {
                $("#progress").hide();
            },
            error: function () {
                alert("Error while retrieving data!");
            }
        });
    }
</script>
<div class="container col-lg-12">


    <div class="col-lg-3 container">
        <div class="panel-group" id="algemeenpanel">

            <div class="panel panel-default">
                <div class="panel-heading">
